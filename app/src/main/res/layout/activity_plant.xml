<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@color/green"            android:adjustViewBounds="true"
            android:layout_marginTop="-50dp"
            android:layout_marginBottom="-50dp"
            android:layout_marginStart="-1000dp"
            android:layout_marginEnd="-50dp"/>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mis Plantas"
            android:fontFamily="@font/aileron_light"
            android:textStyle="bold"
            android:background="@drawable/rounded_background_name"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:layout_gravity="center" />
    </FrameLayout>

    <Button
        android:id="@+id/addPlantButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#272727"
        android:text="AGREGAR UNA PLANTA"
        android:fontFamily="@font/aileron_light"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="16dp"/>
</LinearLayout>